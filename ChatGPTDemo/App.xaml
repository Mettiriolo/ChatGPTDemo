<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="ChatGPTDemo.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:cv="clr-namespace:ChatGPTDemo.Converters"
    xmlns:local="clr-namespace:ChatGPTDemo">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <cv:FromUserToHorizontalOptionConverter x:Key="FromUserToHorizontalOptionConverter" />
            <cv:FromUserToBackgroudColorConverter x:Key="FromUserToBackgroudColorConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
